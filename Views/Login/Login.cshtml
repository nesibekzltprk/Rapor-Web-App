@model RaporFront.Models.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Giriş Yap</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-card {
            width: 100%;
            max-width: 400px;
            padding: 2rem;
            border-radius: 1rem;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.05);
            background-color: #fff;
        }
    </style>
</head>
<body>
    <div class="login-card">
        <h3 class="text-center mb-4">Giriş Yap</h3>

        <form method="post">
            <div class="mb-3">
                <label class="form-label fw-bold">Kullanıcı Adı</label>
                <input asp-for="KullaniciAdi" class="form-control" placeholder="Kullanıcı adınızı girin" />
                <span asp-validation-for="KullaniciAdi" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Şifre</label>
                <input asp-for="Sifre" type="password" class="form-control" placeholder="Şifrenizi girin" />
                <span asp-validation-for="Sifre" class="text-danger small"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Giriş</button>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
